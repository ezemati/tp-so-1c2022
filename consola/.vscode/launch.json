    "version": "0.2.0",
    "configurations": [
        {
            "name": "Consola",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Consola - Make",
            "program": "${workspaceFolder}/bin/consola.out",
            "args": [
                // "--test"
                "cfg/programa.program",
                // "cfg/programa01.program",
                "50"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-disable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/build/glibc-bQZRxl": "/usr/src/glibc"
            }
        }
    ]
}